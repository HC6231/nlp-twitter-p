<div class="container p-3 justify-content-center align-items-center">
    <h3 class="p-3 text-center">Hello, {{user}}</h3>
    <hr>
    <div class="d-flex justify-content-center">
        <a href="/start" class="btn btn-sm btn-primary mr-4">Start Annotation</a>
        <a href="/export" class="btn btn-sm btn-success">Export</a>
    </div>
    <table class="table table-hover mt-5">
        <thead>
        <tr>
            <th style="width: 5%" scope="col">#</th>
            <th style="width: 85%" scope="col">Tweet</th>
            <th style="width: 10%" scope="col">Annotation</th>
        </tr>
        </thead>
        <tbody>
        {{#each annotation as |a|}}
        <tr class='clickable-row' style="cursor: pointer" data-href=/t/{{@index}}>
            <th scope="row">{{@index}}</th>
            <td>{{{a.tweet}}}</td>
            {{#isPOS this.annotation }}
                <td class="bg-success text-white text-center">{{a.annotation}}</td>
            {{else}}
                <td class="bg-danger text-white text-center">{{a.annotation}}</td>
            {{/isPOS}}
        {{/each}}
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function($) {
        $(".clickable-row").click(function() {
            window.location = $(this).data("href");
        });
    });
</script>